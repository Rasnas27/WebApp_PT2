
@{
    Layout = "_LayoutDeslogado";
}

<section class="vh-90 mt-5" style="background-color: #9a90bf;  border-radius: 8px">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Entrar" asp-controller="Login">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Seja Bem-Vindo(a) a Poyares Idiomas!</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Entre na sua conta</h5>

                                    <div class="form-outline mb-4">
                                        
                                        <input type="text" name="UserName" id="form2Example17" class="form-control form-control-lg" required/>
                                        <label class="form-label" for="form2Example17">Login</label>
                                        
                                    </div>

                                    <div class="form-outline mb-4">
                                        
                                        <input type="password" name="Password" id="form2Example27" class="form-control form-control-lg" required/>
                                        <label class="form-label" for="form2Example27">Senha</label>
                                        
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        
                                    </div>

                                    <a class="small text-muted" href="#!">Esqueceu a senha?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Não possui uma conta? <a asp-action="Criar" asp-controller="Professor"
                                                                  style="color: #393f81;">Registre-se aqui!</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Termos de uso</a>
                                    <a href="#!" class="small text-muted">Políticas de privacidade</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>