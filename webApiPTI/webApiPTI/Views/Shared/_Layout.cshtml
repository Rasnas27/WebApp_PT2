<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poyares Idiomas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webApiPTI.styles.css" asp-append-version="true" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3 backgroundColor">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">Poyares Idiomas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between backgroundColor">
                    <ul class="navbar-nav flex-grow-1 ml-auto fontMenu">
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="agenda" asp-area="" asp-controller="Home" asp-action="Index">Agenda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="alunos" asp-area="" asp-controller="Alunos" asp-action="Alunos">Alunos</a>
                        </li>
                    </ul>
                    <div class="nav-item">
                        <button class="btn btn-outline-light" type="button" onclick="logout()">Logout</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - webApiPTI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/tabela.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav-link').on('click', function () {
                $('.nav-link').removeClass('active'); // Remove a classe 'active' de todos os links
                $(this).addClass('active'); // Adiciona a classe 'active' ao link clicado
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
